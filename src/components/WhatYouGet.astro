---
import { CheckCircle2 } from "lucide-react";

interface Props {
  translations: typeof import('@/i18n/en.json')['whatYouGet'];
}

const { translations: t } = Astro.props;
---

<section id="what-you-get" class="py-20 px-1.5 md:px-6 bg-background">
  <div class="container mx-auto max-w-6xl">
    <div class="mb-16">
      <p class="text-sm font-medium text-muted-foreground mb-4">{t.label}</p>
      <h2 class="text-5xl md:text-6xl font-bold leading-tight mb-6">
        {t.title.line1}
        <br />
        {t.title.line2}
      </h2>
      <p class="text-lg max-w-2xl text-muted-foreground">
        {t.description}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {t.benefits.map((benefit) => (
        <div class="space-y-3">
          <div class="flex items-start gap-3">
            <CheckCircle2 client:load className="h-6 w-6 text-primary mt-0.5 flex-shrink-0" />
            <div>
              <h3 class="text-xl font-bold mb-2">{benefit.title}</h3>
              <p class="text-muted-foreground leading-relaxed">
                {benefit.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

