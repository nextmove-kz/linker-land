---
interface Props {
  translations: typeof import('@/i18n/en.json')['about'];
}

const { translations: t } = Astro.props;
---

<section id="about" class="py-20 px-1.5 md:px-6 bg-background">
  <div class="container mx-auto max-w-6xl">
    <div class="grid md:grid-cols-2 gap-16">
      <div>
        <p class="text-sm font-medium text-muted-foreground mb-4">{t.label}</p>
        <h2 class="text-5xl md:text-6xl font-bold leading-tight mb-6">
          {t.title.line1}
          <br />
          {t.title.line2}
        </h2>
      </div>
      
      <div class="space-y-6">
        <p class="text-lg">
          {t.paragraph1.part1}{" "}
          {t.paragraph1.part2}{" "}
          {t.paragraph1.part3}{" "}
          <span class="font-bold">{t.paragraph1.part4}</span>
        </p>
        
        <p class="text-base text-muted-foreground">
          {t.paragraph2}
        </p>
        
        <p class="text-base text-muted-foreground">
          {t.paragraph3}
        </p>
      </div>
    </div>
  </div>
</section>

