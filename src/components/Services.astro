---
import { Code2, Layers, RefreshCw, Settings } from "lucide-react";
import { type Locale } from '@/lib/i18n';

interface Props {
  translations: typeof import('@/i18n/en.json')['services'];
  locale: Locale;
}

const { translations: t, locale } = Astro.props;
const isRu = locale === 'ru';

const icons = [Settings, Layers, RefreshCw, Code2];
---

<section id="services" class="py-20 px-1.5 md:px-6">
  <div class="container mx-auto max-w-6xl">
    <div class="mb-16">
      <h2 class={`font-bold leading-tight mb-6 ${isRu ? 'text-4xl md:text-5xl lg:text-6xl' : 'text-5xl md:text-6xl'}`}>
        {t.title.line1}
        <br />
        {t.title.line2}
      </h2>
      <p class={`max-w-2xl text-muted-foreground ${isRu ? 'text-base md:text-lg' : 'text-lg'}`}>
        {t.description}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {t.items.map((service, index) => {
        const Icon = icons[index];
        return (
          <div class="rounded-lg border border-border bg-card text-card-foreground shadow-sm hover:shadow-lg transition-shadow">
            <div class="p-8">
              <div class="mb-6">
                <div class="w-16 h-16 bg-primary flex items-center justify-center clip-hexagon">
                  <Icon className="h-8 w-8 text-primary-foreground" />
                </div>
              </div>
              <h3 class="text-2xl font-bold mb-4">{service.title}</h3>
              <p class="text-muted-foreground leading-relaxed">
                {service.description}
              </p>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
