---
interface Props {
  translations: typeof import('@/i18n/en.json')['portfolio'];
}

const { translations: t } = Astro.props;
---

<section id="portfolio" class="py-20 px-1.5 md:px-6 bg-background">
  <div class="container mx-auto max-w-6xl">
    <div class="mb-16">
      <p class="text-sm font-medium text-muted-foreground uppercase tracking-wide mb-4">
        {t.label}
      </p>
      <h2 class="text-4xl md:text-5xl font-bold leading-tight max-w-3xl">
        {t.title}
      </h2>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {t.projects.map((project) => (
        <div class="bg-background p-8 rounded-sm shadow-[0_0_0_1px_rgba(0,0,0,0.05),0_0_16px_rgba(0,0,0,0.1)] hover:shadow-[0_0_0_1px_rgba(0,0,0,0.1),0_0_24px_rgba(0,0,0,0.15)] transition-shadow">
          <p class="text-xs text-muted-foreground uppercase tracking-wider mb-4">
            {project.client}
          </p>
          <h3 class="text-2xl font-bold mb-4">
            {project.title}
          </h3>
          <p class="text-sm text-muted-foreground mb-6 leading-relaxed">
            {project.description}
          </p>
          <div class="mb-6">
            <p class="text-sm font-bold text-foreground">
              {project.impact}
            </p>
          </div>
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span 
                class="text-xs px-3 py-1 bg-accent text-accent-foreground rounded-full"
              >
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

