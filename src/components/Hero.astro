---
import Contact from "./Contact";

interface Props {
  translations: typeof import('@/i18n/en.json')['hero'];
  contactTranslations: typeof import('@/i18n/en.json')['contact'];
}

const { translations: t, contactTranslations } = Astro.props;
---

<section class="pt-32 pb-20 px-1.5 md:px-6">
  <div class="container mx-auto max-w-6xl">
    <div class="space-y-8">
      <h1 class="text-6xl md:text-8xl font-black leading-tight">
        {t.title.line1}
        <br />
        <span class="italic font-light">{t.title.line2}</span> {t.title.line3}
        <br />
        <span class="bg-primary text-primary-foreground px-4 inline-block">
          {t.title.line4}
        </span>
      </h1>
      
      <div class="max-w-2xl space-y-4">
        <p class="text-lg text-foreground">
          {t.description.part1}{" "}
          {t.description.part2}{" "}
          <span class="font-bold">
            {t.description.part3}
          </span>
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 pt-4">
        <Contact 
          client:load
          triggerText={t.cta.button}
          triggerClassName="bg-primary text-primary-foreground hover:bg-primary/90 text-base px-8"
          translations={contactTranslations}
        />
        <p class="text-sm text-muted-foreground self-center">
          {t.cta.subtext}
        </p>
      </div>
    </div>
  </div>
</section>

