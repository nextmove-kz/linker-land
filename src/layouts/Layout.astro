---
import '../styles/global.css';
import Providers from '@/components/Providers';
import { type Locale, defaultLocale } from '@/lib/i18n';

interface Props {
  title?: string;
  description?: string;
  locale?: Locale;
}

const { 
  title = "Linker.kz - Technical Excellence for Your Projects", 
  description = "Kazakhstan-based outsource company focused on giving proper chance for ideas to blossom through our technical expertise and experience.",
  locale = defaultLocale
} = Astro.props;

// Generate absolute URL for OpenGraph/Twitter images
const imageUrl = Astro.site 
  ? new URL('/image.png', Astro.site).href
  : new URL('/image.png', Astro.url).href;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Linker.kz" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={imageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@Linker" />
    <meta name="twitter:image" content={imageUrl} />
  </head>

  <body>
    <Providers client:load>
      <slot />
    </Providers>
  </body>
</html>

